@page
@model asp_presentacion.Pages.Ventanas.HabitacionesModel
@{
    ViewData["Titulo"] = "";
}
<center>
    <div>
        <form method="POST"
        enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            <div align="left">
                <h3>Habitaciones</h3>
            </div>
            <div align="left"
            class="bt_panel_buttons">
                <input type="submit"
                value="Refrescar"
                asp-page-handler="BtRefrescar"
                class="btn btn-secondary"
                disabled="@(Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
                <input type="submit"
                value="Nuevo"
                asp-page-handler="BtNuevo"
                class="btn btn-secondary"
                disabled="@(Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
                <input type="submit"
                value="Guardar"
                asp-page-handler="BtGuardar"
                class="btn btn-secondary"
                disabled="@(Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
                <input type="submit"
                value="Cancelar"
                asp-page-handler="BtCancelar"
                class="btn btn-secondary"
                disabled="@(Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas)" />
            </div>

            @if (Model.Accion != lib_dominio.Nucleo.Enumerables.Ventanas.Listas ||
            Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <input type="hidden"
                asp-for="@Model.Actual!.Id" />
            }
            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <input type="hidden"
                asp-for="@Model.Actual!.Nombre" />
                <input type="hidden"
                asp-for="@Model.Actual!.Camas" />
                <input type="hidden"
                asp-for="@Model.Actual!.Estado" />
            }

            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Editar)
            {
                <div class="containers_vn panel panel-default">
                    <h3>Casa</h3>

                    <div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                Nombre
                            </label>
                            <div class="col-lg-6">
                                <input id="Nombre"
                                class="cts_forms form-control"
                                asp-for="@Model.Actual!.Nombre" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                Camas
                            </label>
                            <div class="col-lg-6">
                                <input id="Camas"
                                class="cts_forms form-control"
                                asp-for="@Model.Actual!.Camas" />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-4 control-label">
                                Imagen
                            </label>
                            <div class="col-lg-6">
                                <input id="Imagen"
                                       class="cts_forms form-control"
                                       asp-for="@Model.Actual!.Imagen" />
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <label class="col-lg-4 control-label">
                                Estado
                            </label>
                            <select id="nmNota2"
                            class="cts_forms form-control"
                            asp-for="@Model.Actual!.Estado">
                                <option value="true">Libre</option>
                                <option value="false">Ocupado</option>

                            </select>
                        </div>
                    </div>
                </div>
            }

            @if (ViewData.ContainsKey("Mensaje"))
            {
                <input type="hidden"
                asp-for="@Model.Accion" />
                @await Html.PartialAsync("../Emergentes/Mensajes.cshtml")
                ;
            }

            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <div class='popup'>
                    <div class='pp_del_inner'>
                        <div style='width:95%'>
                            <h2 align="left">
                                Mensaje
                            </h2>

                            <h4 align="left">
                                Desea borrar la entidad?
                            </h4>
                            <h6 align="left">
                                @Model.Actual!.Nombre,
                                @Model.Actual!.Camas
                            </h6>
                            <br />
                            <br />
                            <input type="submit"
                            value="Borrar"
                            asp-page-handler="BtBorrar"
                            class="btn btn-secondary" />
                            <input type="submit"
                            value="Cerrar"
                            asp-page-handler="BtCancelar"
                            class="btn btn-secondary" />
                        </div>
                    </div>
                </div>
            }

            @if (Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Listas ||
            Model.Accion == lib_dominio.Nucleo.Enumerables.Ventanas.Borrar)
            {
                <input id="flNombre"
                class="cts_forms form-control"
                asp-for="@Model.Filtro!.Nombre"
                placeholder="Nombre" />
                <br />

                <div class="containers_vn panel panel-default">
                    <table class="tb_data table table-striped table-bordered table-hover">
                        <tr>
                            <th>
                                Nombre
                            </th>
                            <th>
                                Camas
                            </th>
                            <th class="cl_actions">
                                Estado
                            </th>
                            <th class="cl_actions">
                                Imagen
                            </th>
                            <th class="cl_actions">
                                Accion
                            </th>
                        </tr>
                        @if (Model != null && Model.Lista != null)
                        {
                            @foreach (var elemento in Model.Lista)
                            {
                                <tr>
                                    <td>
                                        @elemento.Nombre
                                    </td>
                                    <td>
                                        @elemento.Camas
                                    </td>

                                    @if (elemento.Estado)
                                    {
                                        <td class="cl_hidden">
                                            Libre
                                        </td>
                                    } else
                                    {
                                        <td class="cl_hidden">
                                            Ocupado
                                        </td>
                                    }

                                    <td>
                                        <div style="text-align: center;">
                                            <img src="@elemento.Imagen" alt="Imagen" style="width: 100px; height: 100px; border: 1px solid #ccc; object-fit: cover;" />
                                        </div>

                                    </td>

                                    <td>
                                        <input type="submit"
                                               value="Modicar"
                                               asp-page-handler="BtModificar"
                                               class="btn btn-secondary"
                                               asp-route-data="@elemento.Id" />
                                        <input type="submit"
                                               value="Borrar"
                                               asp-page-handler="BtBorrarVal"
                                               class="btn btn-secondary"
                                               asp-route-data="@elemento.Id" />
                                    </td>
                                </tr>
                            }
                        }
                    </table>
                </div>
            }
        </form>
    </div>
</center>

