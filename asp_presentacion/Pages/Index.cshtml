@page
@model IndexModel
@{
    ViewData["Title"] = "";
}
@if (!Model.EstaLogueado)
{
    <div class="container"
    align="left"
    style="width:100%">
        <h3>
            Login
        </h3>

        <form method="POST">
            <div style="width:60%">
                <div class="form-group">
                    <label class="control-label">
                        Usuario:
                    </label>
                    <input onchange="keyUp(this)"
                    asp-for="@Model.Email"
                    class="form-control" />
                </div>
                <div class="form-group">
                    <label class="control-label">
                        Contraseña:
                    </label>
                    <input type="password"
                    onchange="keyUp(this)"
                    asp-for="@Model.Contrasena"
                    class="form-control" />
                </div>

                <input type="submit"
                value="Entrar"
                asp-page-handler="BtEnter"
                class="btn btn-default" />
                <input type="submit"
                value="Limpiar"
                asp-page-handler="BtClean"
                class="btn btn-default" />
                <input type="submit"
                value="Regitrarse"
                asp-page-handler="BtCrear"
                class="btn btn-default" />
            </div>
        </form>
    </div>
}
else
{
    <div class="text-center">
        <h1 class="display-4">
            Bienvenido al hotel
        </h1>

        <div class="container mt-3">
            <div class="d-flex justify-content-end">
                <form method="POST">
                    <input type="submit"
                    value="Cerrar"
                    asp-page-handler="BtClose"
                    class="btn btn-danger" />
                </form>
            </div>
        </div>


        <div class="container text-center">
            <h2>Habitaciones Disponibles</h2>

            <div class="row">
                @foreach (var hab in Model.Lista!)
                {
                    @if (!hab.Estado)
                    {
                        continue;
                    }

                    <div class="col-md-4 mb-4">
                        <div class="card">
                            <img src="@hab.Imagen" class="card-img-top" style="height:200px; object-fit:cover;" alt="Imagen de habitación" />
                            <div class="card-body">
                                <h5 class="card-title">@hab.Nombre</h5>
                                <p class="card-text">Camas: @hab.Camas</p>
                                <p class="card-text">Estado: @(hab.Estado ? "Disponible" : "Ocupada")</p>
                                <form method="post" asp-page-handler="BtReservar">
                                    <button type="submit" class="btn btn-primary">Reservar</button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>


    </div>
}